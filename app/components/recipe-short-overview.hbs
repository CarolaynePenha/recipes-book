
<div class="recipe-overview" {{on "click" this.toggleExpand}}>
    <h3>
        <span {{ on "click" this.toggleFavorite}}>
            {{#if this.isFavorite}}
                <span class="favorite star">★</span>
                {{else}}
                    <span class="star">☆</span>
            {{/if}}
        </span>

        {{@title}}
        <button {{on "click" this.deleteRecipe}}> Delete</button>
    </h3>

    {{#if this.isExpanded}}
        <p class="recipe-detail">{{@description}}</p>
        <LinkTo @route="recipes/details" @model="{{@id}}">Details</LinkTo>
    {{/if}}

</div>